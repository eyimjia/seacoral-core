{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "type":"object",
  "additionalProperties":false,
  "properties":{
    "enabled":{
      "type":"boolean"
    },
    "once":{
      "type":"boolean"
    },
    "retention":{
      "type":"integer",
      "minimum":1
    },
    "name":{
      "type":"string",
      "minLength":3,
      "pattern":"^[a-zA-Z0-9][a-zA-Z0-9_]+[a-zA-Z0-9]$"
    },
    "endpoint_id":{
      "type":"string"
    },
    "app_id":{
      "type":"string"
    },
    "unit_id":{
      "type":"string"
    },
    "schedule":{
      "type":"string"
    },
    "desc":{
      "type":"string"
    },
    "role":{
      "type":"string",
      "enum":[
        "master",
        "slave"
      ]
    },
    "type":{
      "type":"string",
      "enum":[
        "full"
      ]
    },
    "created_user":{
      "type":"string",
      "minLength":1
    }
  },
  "required":[
    "retention",
    "name",
    "endpoint_id",
    "app_id",
    "type",
    "created_user"
  ]
}